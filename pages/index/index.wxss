.search-container {
  background-color: #fff;
}

.search {
  height: 60px;
  padding-top: 70rpx;
  position: relative;
  width: 100vw;
  /* height: 50rpx; */
  display: flex;
  box-sizing: border-box;
  padding-left: 26rpx;
  background-color: #fff;
}

.search-title {
  margin-right: 40rpx;
  left: 0;
  font-weight: bold;
  font-size: 16px;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}
.search input {
  display: block;
  box-sizing: border-box;
  background: #F7F8FA;
  height: 62rpx;
  border-radius: 20rpx;
  padding-left: 20rpx;
  line-height: 62rpx;
  font-size: 12px;
}
.swiper-container{
  position: relative;
}
.swiper-container .swiper1 {
  width: 750rp;
  height: 375rpx;
}
.swiper-container .swiper1 image {
  width: 750rpx;
  height: 375rpx;
}
.goodsDynamic{
  position: absolute;
  bottom: 46rpx;
  left: 24rpx;
  width: 668rpx;
  color:#fff;
  font-size: 24rpx;
}
.goodsDynamic .swiper2{
  width: 100%;
  height: 64rpx;
}
.goodsDynamic-item{
  display: inline-flex;
  align-items: center;
  background: rgba(0,0,0,0.4);
  border-radius: 32rpx;
  padding: 8rpx 16rpx;
}
.goodsDynamic-item image{
  width: 32rpx;
  height: 32rpx;
  border-radius: 50%;
  flex-shrink: 0;
}
.goodsDynamic-item text{
  margin-left: 8rpx;
  text-overflow: ellipsis;
  white-space: nowrap;
  overflow: hidden;
}